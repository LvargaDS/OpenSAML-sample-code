<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>HTTP Redirect demo</display-name>

    <servlet>
        <servlet-name>PostServlet</servlet-name>
        <servlet-class>no.steras.opensamlSamples.httpPost.PostServlet</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>ReceiverServlet</servlet-name>
        <servlet-class>no.steras.opensamlSamples.httpPost.ReceiverServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PostServlet</servlet-name>
        <url-pattern>/postPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReceiverServlet</servlet-name>
        <url-pattern>/receiverPage</url-pattern>
    </servlet-mapping>

</web-app>
