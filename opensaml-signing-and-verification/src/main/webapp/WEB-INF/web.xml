<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Signing and verification</display-name>

    <servlet>
        <servlet-name>SenderServlet</servlet-name>
        <servlet-class>no.steras.opensamlSamples.signingVerification.SenderServlet</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>ReceiverServlet</servlet-name>
        <servlet-class>no.steras.opensamlSamples.signingVerification.ReceiverServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SenderServlet</servlet-name>
        <url-pattern>/senderPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReceiverServlet</servlet-name>
        <url-pattern>/receiverPage</url-pattern>
    </servlet-mapping>

</web-app>
